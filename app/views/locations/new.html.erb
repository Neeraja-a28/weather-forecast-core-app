<h1>Enter Address</h1>

<% if @location.errors.any? %>
  <div id="error_explanation" style="color: red;">
    <ul>
      <% @location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @location, local: true, data: { turbo: false } do |f| %>
  <%= f.label :street %>
  <%= f.text_field :street %><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br>

  <%= f.label :state %>
  <%= f.text_field :state %><br>

  <%= f.label :zip %>
  <%= f.text_field :zip %><br>

  <%= f.label :country_code %>
  <%= f.text_field :country_code %><br>

  <%= f.submit "Get Forecast" %>
<% end %>

</br>
<%= link_to "Back", locations_path %>
